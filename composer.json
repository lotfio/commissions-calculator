{
    "name": "lotfio/dev-task",
    "description": "commissions calculator",
    "license": "MIT",
    "authors": [
        {
            "name": "lotfio",
            "email": "contact@lotfio.net"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php" : ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "^4",
        "friendsofphp/php-cs-fixer": "^3"
    },
    "autoload": {
        "psr-4": {
            "CommissionsCalculator\\" : "src"
        }
    },
    "scripts": {
        "test-unit": [
            "phpunit --testsuite unit"
        ],
        "test-integration": [
            "phpunit --testsuite integration"
        ],
        "psalm" : [
            "psalm --show-info=true"
        ],
        "style": [
            "php-cs-fixer fix ./src"
        ]
    }
}
